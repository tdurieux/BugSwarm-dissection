+ */
+public class JannovarBaseOptions {
+
+	/** Whether or not to print progress */
+	private boolean reportProgress = true;
+
+	/** proxy for HTTP */
+	private URL httpProxy = null;
+
+	/** proxy for HTTPS */
+	private URL httpsProxy = null;
+
